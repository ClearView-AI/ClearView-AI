
{
  "targetScreen": "sap_example_screen",
  "targetColumns": ["DocNumber","Vendor","PostDate","Amount","Currency","Status"],
  "fieldMap": {
    "DocNumber": { "transform": { "fn": "padLeft", "args": ["Document ID", "0", 10] } },
    "Vendor":    { "transform": { "fn": "identity", "args": ["Vendor Name"] } },
    "PostDate":  { "transform": { "fn": "normalizeDate", "args": ["Posting Date"] } },
    "Amount":    { "transform": { "fn": "number", "args": ["Total"] } },
    "Currency":  { "transform": { "fn": "upper", "args": ["Currency"] } },
    "Status":    { "transform": { "fn": "upper", "args": ["Status"] } }
  },
  "defaultFilters": {
    "Status": ["OPEN","PENDING","POSTED"]
  }
}
